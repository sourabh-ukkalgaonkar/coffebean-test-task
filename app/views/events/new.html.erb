<section class='text-center'>
  <div class='card shadow-5-strong mt-1'>
    <div class='card-body'>
      <div class='row d-flex justify-content-center'>
        <div class='col-lg-8'>
          <h2 class='fw-bold mb-5'>Initiate Event</h2>
          <%= form_tag(events_path) do |f| %>
            <div class='row'>
              <div class="col-md-6">
                <%= submit_tag 'Initiate Event A', class: 'btn btn-primary btn-block mb-4' %>
              </div>

              <div class="col-md-6">
                <%= submit_tag 'Initiate Event B', class: 'btn btn-primary btn-block mb-4' %>
              </div>
            </div>
          <% end %>
        </div>  
      </div>
    </div>
  </div>
</section>
